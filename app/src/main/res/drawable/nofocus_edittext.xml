<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="?attr/colorFocus" />
            <solid android:color="?attr/colorFocus" />
        </shape>

    </item>

    <item
        android:bottom="1.5dp"
        android:top="0dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="?attr/colorBg" />
            <solid android:color="?attr/colorBg" />
        </shape>
    </item>
</layer-list>